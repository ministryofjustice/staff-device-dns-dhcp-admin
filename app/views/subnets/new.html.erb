<%= render "layouts/form_errors", resource: @subnet %>

<h2 class="govuk-heading-l">Create a new Subnet</h2>

<%= form_with model: @subnet, local: true do |f| %>
  <div class="govuk-form-group <%= field_error(@subnet, :cidr_block )%>">
    <%= f.label :cidr_block, "CIDR Block", class: "govuk-label" %>
    <%= f.text_field :cidr_block, required: true, class: "govuk-input" %>
  </div>

  <div class="govuk-form-group <%= field_error(@subnet, :start_address) %>">
    <%= f.label :start_address, "Start Address", class: "govuk-label" %>
    <%= f.text_field :start_address, required: true, class: "govuk-input" %>
  </div>

  <div class="govuk-form-group <%= field_error(@subnet, :end_address) %>">
    <%= f.label :end_address, "End Address", class: "govuk-label" %>
    <%= f.text_field :end_address, required: true, class: "govuk-input" %>
  </div>

  <%= f.submit "Create", { class: "govuk-button", "data-module" => "govuk-button" } %>
<% end %>
